@model List<WebApp.Models.urunler>
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var urun in Model)
{


<section class="page-section">
    <div class="container">
        <div class="product-item">
            <div class="product-item-title d-flex">
                <div class="bg-faded p-5 d-flex ml-auto rounded">
                    <h2 class="section-heading mb-0">
                       
                        <span class="section-heading-lower">@urun.üsttbaslik</span>
                    </h2>
                </div>
            </div>
            <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="~/Content/img/@urun.foto" alt="">
            <div class="product-item-description d-flex mr-auto">
                <div class="bg-faded p-5 rounded">
                    @Html.Raw(urun.icerik)
                    @Html.ActionLink("Detay","UrunDetay",new { id = urun.id },new { @class="btn btn-info"})
                </div>
            </div>
        </div>
    </div>
</section>
}
